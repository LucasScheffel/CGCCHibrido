{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "${file}",
                "${workspaceFolder}/dependencies/GLAD/src/glad.c",
                "${workspaceFolder}/Common/src/stb_image.cpp",
                "${workspaceFolder}/Common/src/Shader.cpp",
                "${workspaceFolder}/Common/src/Curve.cpp",
                "${workspaceFolder}/Common/src/Bezier.cpp",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "/I", "${workspaceFolder}/dependencies/glfw-3.3.4.bin.WIN32/include",
                "/I", "${workspaceFolder}/dependencies/GLAD/include",
                "/I", "${workspaceFolder}/dependencies/glm",
                "/I", "${workspaceFolder}/dependencies/libs",
                "/I", "${workspaceFolder}/Common/include",
                "/link",
                "/LIBPATH:${workspaceFolder}/dependencies/glfw-3.3.4.bin.WIN32/lib-vc2019",
                "glfw3_mt.lib",
                "opengl32.lib",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib",
                "legacy_stdio_definitions.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
